<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Имя"
                android:inputType="textPersonName"/>

        <Button
                android:id="@+id/buttonSpecialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" android:text="Выберите класс" android:onClick="onChangeSpecializationButton"/>

        <EditText
                android:id="@+id/editTextArchetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Архетип"
                android:inputType="textPersonName"/>

        <EditText
                android:id="@+id/editTextRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Раса"
                android:inputType="textPersonName"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/editTextIntelligence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Интеллект"
                    android:inputType="textPersonName"/>

            <EditText
                    android:id="@+id/editTextAgility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Ловкость"
                    android:inputType="textPersonName"/>

            <EditText
                    android:id="@+id/editTextStrength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Сила"
                    android:inputType="textPersonName"/>

            <EditText
                    android:id="@+id/editTextCharisma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Харизма"
                    android:inputType="textPersonName"/>

            <EditText
                    android:id="@+id/editTextBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Телосложение"
                    android:inputType="textPersonName"/>
                    <!--ХУЙ-->
            <EditText
                    android:id="@+id/editTextWisdom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Мудрость"
                    android:inputType="textPersonName"/>
        </LinearLayout>

        <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCreateCharacterButton"
                android:text="Создать персонажа"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>