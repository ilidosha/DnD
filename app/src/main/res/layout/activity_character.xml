<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".pages.Character">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="280dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:src="@drawable/sabael"
                    android:layout_width="436dp"
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_height="302dp" android:scaleType="centerCrop"
                    android:contentDescription="@string/sanyapers"/>
        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="Уровень мастерства"
            android:layout_width="80dp"
            android:layout_height="63dp" android:id="@+id/masteryLevel"
            tools:layout_editor_absoluteX="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"/>
    <CheckBox
            android:text="Вдохновение"
            android:layout_width="124dp"
            android:layout_height="31dp" android:id="@+id/checkBox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/masteryLevel" android:layout_marginStart="252dp"
            android:textColor="@android:color/background_light" android:textStyle="bold"
            android:shadowColor="@android:color/background_light"/>
</android.support.constraint.ConstraintLayout>